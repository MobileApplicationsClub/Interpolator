
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_main"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mac.interpolator.interpolator.Main_interpolator"
   >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="y-y1 = y2-y1\n-------    --------\nx-x1    x2-x1\n"
        android:id="@+id/tv"
        android:textColor="#990000"
        android:paddingLeft="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_y2"
        android:layout_alignRight="@id/tv"
        android:layout_alignEnd="@id/tv"
        android:layout_below="@id/tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="y2="
        android:id="@+id/tv_y2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/et_y2"
        android:layout_below="@+id/tv"
        android:layout_alignBottom="@+id/et_y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_y1"
        android:layout_below="@+id/et_y2"
        android:layout_alignRight="@+id/et_y2"
        android:layout_alignEnd="@+id/et_y2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_x2"
        android:layout_below="@+id/et_y1"
        android:layout_alignLeft="@+id/et_y1"
        android:layout_alignStart="@+id/et_y1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_x1"
        android:layout_below="@+id/et_x2"
        android:layout_alignLeft="@+id/et_y1"
        android:layout_alignStart="@+id/et_y1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_x"
        android:layout_below="@+id/et_x1"
        android:layout_alignLeft="@+id/et_y1"
        android:layout_alignStart="@+id/et_y1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="y1="
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_y1"
        android:layout_alignTop="@+id/et_y1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/et_x2"
        android:layout_toLeftOf="@+id/et_y1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x2="
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_x2"
        android:layout_alignTop="@+id/et_x2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/et_x1"
        android:layout_toLeftOf="@+id/et_x2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x1="
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_x1"
        android:layout_alignTop="@+id/et_x1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/et_x"
        android:layout_toLeftOf="@+id/et_x1" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x="
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_x"
        android:layout_alignTop="@+id/et_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/et_x"
        android:layout_above="@+id/tv_y" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="y="
        android:id="@+id/tv_y"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/et_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/et_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/et_y"
        android:layout_alignTop="@+id/tv_y"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tv_y"
        android:layout_alignBottom="@+id/tv_y" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/b_go"
        android:layout_below="@+id/et_x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
